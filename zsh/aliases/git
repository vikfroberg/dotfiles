echo "  g  Git"

# Git
function g {
  echo "Git"
  echo ""
  echo "  Add:"
  echo "    ga   Add"
  echo "    gaa  Add all"
  echo "    gap  Add patches"
  echo ""
  echo "  Commit:"
  echo "    gc   Commit"
  echo "    gca  Commit all (modified)"
  echo ""
  echo "  Diff:"
  echo "    gd   Diff"
  echo "    gdc  Diff staged (cached)"
  echo ""
  echo "  Log:"
  echo "    gl   Pretty log"
  echo ""
  echo "  Status:"
  echo "    gs   Status"
}

# Add
alias ga="git add"
alias gaa="git add -a"
alias gap="git add -p"

# Commit
alias gc="git commit -v"
alias gca="git commit -av"

# Diff
alias gd="git diff"
alias gdc="git diff --cached"

# Log
alias gl="git l"

# Status
alias gs="git status"
