[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
[alias]
  stage = !git add
  unstage = !git reset
  staged = !git diff --cached
  undo = !git reset --soft HEAD~1
  pop = !git stash pop
  amend = !git add . && git add -u . && git commit --amend
  squash = !git rebase -i master
  amend = !git commit --amend --no-edit
  conflicts = !git diff --name-only --diff-filter=U | uniq
[user]
  email = vikfroberg@gmail.com
  [includeIf "gitdir:~/Code/Carla"]
    email = viktor.froberg@carla.se
  name = Viktor Froberg
[commit]
  template = ~/.gitmessage
[push]
  default = simple
[core]
  excludesfile = ~/.gitignore
  fileMode = false
  editor = nvim
[github]
  user = vikfroberg
[init]
  defaultBranch = main
[rerere]
  enabled = true
  autoUpdate = true
[branch]
	sort = -committerdate
